@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model IEnumerable<RecipeBox.Models.Recipe>

<h2>Items for @User.Identity.Name</h2>

@if (Model.Any())
{
    @foreach (Recipe recipe in Model)
    {
        <div class="well">
            <h4>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId })</h4>
            <h5>Total Time: @recipe.TotalTime</h5>
        </div>
    }
} 
else
{
  <h3>No recipes have been added yet!</h3>
}

<p>@Html.ActionLink("Add new recipe", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>