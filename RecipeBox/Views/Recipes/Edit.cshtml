@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})

    @Html.LabelFor(model => model.TotalTime)
    @Html.TextBoxFor(model => model.TotalTime, new {@class = "form-control"})

    @Html.LabelFor(model => model.Ingredients)
    @Html.TextAreaFor(model => model.Ingredients, new {@class = "form-control"})

    @Html.LabelFor(model => model.Rating)
    <select id="Rating" name="Rating" class = "form-control">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <input type="submit" value="Save" class="btn btn-info"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>