@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.TotalTime)
    @Html.TextBoxFor(model => model.TotalTime)<br>

    @Html.LabelFor(model => model.Ingredients)
    @Html.TextAreaFor(model => model.Ingredients)<br>

    @Html.Label("Select cusine type")
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Save" class="btn btn-default"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>