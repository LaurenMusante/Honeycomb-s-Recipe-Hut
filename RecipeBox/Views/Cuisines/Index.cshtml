@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisine types have been added yet!</h3>
} 

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
}

<p>@Html.ActionLink("Add New Cuisine", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>